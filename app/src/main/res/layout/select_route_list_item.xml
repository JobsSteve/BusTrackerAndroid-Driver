<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_view_select_route_main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/list_item_small_margin"
        android:layout_marginLeft="@dimen/list_item_small_margin"
        android:layout_marginBottom="@dimen/list_item_divider"
        android:paddingTop="@dimen/list_item_small_margin"
        android:paddingBottom="@dimen/list_item_small_margin"
        android:paddingLeft="@dimen/list_item_large_margin"
        android:paddingRight="@dimen/list_item_large_margin"
        android:background="@drawable/rounded_view_select_route_list_item_time">

        <TextView
            android:id="@+id/list_item_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/list_item_small_text_size"
            android:textColor="@color/colorAccent"
            android:text=" 8:05" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/list_item_small_margin"
        android:layout_marginRight="@dimen/list_item_small_margin"
        android:layout_marginBottom="@dimen/list_item_divider"
        android:paddingTop="@dimen/list_item_small_margin"
        android:paddingBottom="@dimen/list_item_small_margin"
        android:paddingLeft="@dimen/list_item_large_margin"
        android:paddingRight="@dimen/list_item_large_margin"
        android:background="@drawable/rounded_view_select_route_list_item_route">

        <TextView
            android:id="@+id/list_item_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="@dimen/list_item_small_text_size"
            android:textColor="@color/colorAccent"
            android:text="Kηφισιά"/>

    </RelativeLayout>

</LinearLayout>